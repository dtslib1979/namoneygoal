{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Guild Registry Schema",
  "description": "12-slot guild registry schema for branch validation",
  "type": "object",
  "required": ["meta", "slots"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["name", "industry", "totalSlots"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Guild name"
        },
        "industry": {
          "type": "string",
          "enum": ["education", "design", "entertainment", "realestate", "general"],
          "description": "Industry vertical"
        },
        "totalSlots": {
          "type": "integer",
          "minimum": 1,
          "maximum": 12,
          "default": 12
        },
        "version": {
          "type": "string"
        },
        "updated": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "slots": {
      "type": "array",
      "minItems": 1,
      "maxItems": 12,
      "items": {
        "$ref": "#/definitions/slot"
      }
    }
  },
  "definitions": {
    "slot": {
      "type": "object",
      "required": ["id", "status", "type"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^slot(0[1-9]|1[0-2])$"
        },
        "status": {
          "type": "string",
          "enum": ["active", "pending", "suspended", "empty"]
        },
        "type": {
          "type": "string",
          "enum": ["anchor", "paid", "free"]
        },
        "member": {
          "$ref": "#/definitions/member"
        },
        "joinedAt": {
          "type": "string",
          "format": "date"
        },
        "expiresAt": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "member": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "avatar": {
          "type": "string"
        },
        "contact": {
          "type": "object",
          "properties": {
            "kakao": { "type": "string" },
            "phone": { "type": "string" },
            "email": { "type": "string" }
          }
        },
        "features": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["walkie", "card", "blog", "video", "pwa"]
          }
        }
      }
    }
  }
}
